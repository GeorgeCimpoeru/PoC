<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color of the button -->
    <solid android:color="#90D3D3D3"/> <!-- Change to desired button color -->

    <!-- Radius for the rounded corners -->
    <corners android:radius="16dp" /> <!-- Adjust radius to make corners more/less rounded -->

    <!-- Optional: Padding inside the button -->
    <padding
        android:left="12dp"
        android:right="12dp"
        android:top="8dp"
        android:bottom="8dp" />
</shape>